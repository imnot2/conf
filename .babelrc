{
    "presets": [
        "env",
        "react",
        "es2015",
        "stage-1"
    ],
    "plugins": ["transform-decorators-legacy"],
    "env": {
        "dev": {
            "plugins": [
                [
                    "react-transform", {
                        "transforms": [{
                            "transform": "react-transform-hmr",
                            "imports": [
                                "react"
                            ],
                            "locals": [
                                "module"
                            ]
                        }]
                    }
                ]
            ]
        }
    }
}
